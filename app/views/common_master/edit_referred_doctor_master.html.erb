<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-gears"></i>
              <span><%= t('Referred Doctor Master')%></span>
              <small><%= t('Edit')%></small>
    </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
        <!-- <li>
          <a href="">
            <i class="icon-backward"></i>
          </a>
        </li> -->
          <li>
            <a href="/home/dashboard">
              <i class="icon-dashboard"></i>
              <%= t('dashboard')%></li>
            </a>
          
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><i class="icon-gears"></i>
          <%= t('Referred Doctor Master')%></li>
        </ul>
      </div>
</div>

<div id="flash"><%= render 'layouts/flash_messages'%></div>

<div class="col-sm-12">
  <div class="box bordered-box blue-border">
    <div class="box-header blue-background">
      <div class="title">
        <i class="icon-book"></i>
                        Referred Doctor Master
      </div>
      <div class="actions">
                        
                        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
      </div>
    </div>

    <div class="box-content box-double-padding">
     <%= form_for @referred_doctor_master,url:{action: 'update_referred_doctor_master',id:@referred_doctor_master.id},method: :patch  do |c| %>
        <fieldset>
        <% if @referred_doctor_master.errors.any?%>
        <div class="alert alert-danger">
        <h4>Errors prohibited to being saved:</h4>
        <ul><% @referred_doctor_master.errors.full_messages.each do |msg|%>
          <li style="width:800px"><%= msg %></li>
          <%end%></ul>
          </div>  
        <%end%>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Doctor Name:</label>
                <div class="col-sm-6"><%= c.text_field :name,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Doctor name",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Specialization:</label>
                 <div class="col-sm-6"><%= c.select :specialization_id,@specializations.collect{|s| [s.specialized,s.id]},{prompt:"Select specailized"},{class: "form-control input-group",required: true,style:"width:200px"}%>  
                  </div> 
                </div>
            </div>


   <br>
          <div class="row">
            <div class="form-group">
              
               <label class="col-sm-2 control-label">Gender:</label>
                  <div class="col-sm-6"><%= c.select :gender,['Male','Female'],{prompt:"Select gender"},{class: "form-control input-group",required: true,style:"width:150px"}%>  
                  </div> 
                </div>
            </div>
          <br>
            <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Age:</label>
                  <div class="col-sm-2"><%= c.text_field :age,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "age",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div> 

                  <label class="col-sm-1 control-label">D.O.B:</label>
                  <div class="col-sm-3"><%= c.date_field :date_of_birth,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "D.O.B",
                      required: true,
                      :"data-content"=>"Select Date",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>  

                  
                </div>
              </div>              
             <br>  
             <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Address:</label>
                <div class="col-sm-6"><%= c.text_area :address,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Address",
                      required: true,
                      :"data-content"=>"Enter Address Here",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">City:</label>
                <div class="col-sm-6"><%= c.select :city_id,@cities.collect{|c| [c.city_name,c.id]},{prompt:"Select city"},{class: "form-control input-group",required: true,style:"width:150px"}%>  
                  </div> 
    
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Mobile Number:</label>
                <div class="col-sm-6"><%= c.text_field :mobile_no,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "mobile number",
                      required: true,
                      :"data-content"=>"Enter Mobile Number Here",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Phone Number:</label>
                <div class="col-sm-6"><%= c.text_field :phone_no,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Phone number",
                      required: true,
                      :"data-content"=>"Enter Phone Number Here",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-6"><%= c.text_field :email_id,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Email",
                      required: true,
                      :"data-content"=>"Enter Email Address Here",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
            <br>

           
    <div class="form-actions">

                  <div class="row">
                       
                        <div class="col-sm-3"></div>
                        <div class="col-sm-2" >                
                           
                                <%= c.submit 'Update', class: "btn btn-group btn-primary btn-lg"%>
                                
                        </div>
                         <div class="col-sm-5"></div>
                    </div> 
                </div>


          </fieldset>
        <%end%>
        </div>
        </div>
        </div>
     
