<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-gears"></i>
              <span><%= t('Service Master')%></span>
              <small><%= t('View')%></small>
    </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
        <!-- <li>
          <a href="">
            <i class="icon-backward"></i>
          </a>
        </li> -->
          <li>
            <a href="/home/dashboard">
              <i class="icon-dashboard"></i>
              <%= t('dashboard')%></li>
            </a>
          
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><i class="icon-gears"></i>
          <%= t('Service Master')%></li>
        </ul>
      </div>
</div>
<div id="flash"><%= render 'layouts/flash_messages'%></div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="pull-right">
        <%= link_to 'New Service Master', common_master_new_service_master_path, class: "btn btn-white hidden-xs", style: "margin-bottom:20px;" %>
    </div>
  </div>
</div>
  
<div class="col-sm-12 ">
  <div class="box bordered-box green-border" style="margin-bottom:0;">
    <div class="box-header green-background">
      <div class="title"><%= t('service master details')%></div>
        <div class="actions">  
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
          </a>
        </div>
    </div>

  <div class="box-content box-no-padding">
  <div class="responsive-table">
    <div class="scrollable-area">
      <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
      <div class="row datatables-top">
      <div class="col-sm-4">
        <div id="DataTables_Table_0_length" class="dataTables_length">
        </div>
      </div>
      </div>
      <table class="data-table table table-bordered table-striped dataTable" style="margin-bottom:0;" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
        <% if @service_masters.empty? %>
         <h4 align="center">No Record Found </h4>
          <% else %>
        <thead>
          <tr role="row">
          <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
              Name
            : activate to sort column descending" style="width: 297px;">
             Service
            </th>
            <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
              Name
            : activate to sort column descending" style="width: 297px;">
             Charge
            </th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=": activate to sort column ascending" style="width: 125px;">Actions</th>
            </tr>
        </thead>
        
      <tbody role="alert" aria-live="polite" aria-relevant="all">
    <% @service_masters.each do |f|%>
      <tr class="<%= cycle('odd', 'even')%>">
      <td class=" sorting_1"><%= f.name+"-"+f.service_date.to_s %></td>
       <td class=" sorting_1"><%= f.charge %></td>
        <td class=" ">
          <div class="text-right">
          <i class="icon-pencil"></i>
            <%= link_to 'Edit' ,common_master_edit_service_master_path(f),class: "btn btn-warning btn-xs"%>
            <i class="icon-remove"></i>
            <%= link_to 'Delete' ,common_master_delete_service_master_path(f),method: :delete, data:{confirm:"Are You sure to delete '#{f.name}' ?"},class: "btn btn-danger btn-xs"%>
          </div>              
        </td>
      </tr>
    <%end%>
          </tbody>
        <%end%>
          </table>
          <div class="row datatables-bottom"><div class="col-sm-6"></div><div class="col-sm-6 text-right"><div class="dataTables_paginate paging_bootstrap"><ul class="pagination pagination-sm"><li class="prev disabled"><a href="#">← Previous</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li class="next"><a href="#">Next → </a></li></ul></div></div></div></div>
    </div>
  </div>
</div>

</div>
</div>
