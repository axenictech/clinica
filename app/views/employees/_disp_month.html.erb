<div class="label-field-pair">
	 <%= form_for :view_payslip, url:{action:'view_payslip',format:@department},remote:true,html:{id: "user_form"} do |f|%>

		<%=f. label :'Select Month'%>
		<div  class="text-input-bg">
   		 <%= f.select :id,  @salary_dates.all.collect {|b| [b.salary_date.strftime("%B %Y")]},{prompt:true},{onchange:"$('#user_form').submit();"}%>
   			<%end%>
   		 </div>
   		 	<div id="payslip_disp"></div>
   </div>
