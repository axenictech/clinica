<div id="content-header">
   <hr class="fancy-line"></hr>
  <h1>Admission</h1>
  <h3>Edit Privileges<br />
  
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div><br/><br/>

<div id="page-yield">
 

<%= form_for :edit_privilege ,url:{action:'update_privilege',format: @employee.id} do |f| %>
<table align="center" class="table table-hover" style="width:100%">

    <tbody>
    
   	<tr>
   			 <td class="col-4"><%= "Set Privilege for "+@employee.first_name%></td>
 
   	</tr>
     <tr><td colspan="4"><%=f.submit "Update",class: "btn btn-primary" %></td></tr>
</tbody>
</table>

<div class="sel-list">
            <%= t('select') %>: <%= link_to 'all','#',{onclick:"
              event.preventDefault();
              $('.check_box').prop('checked', true);"}%>,
            <%= link_to 'none','#',{onclick:"
              event.preventDefault();
              $('.check_box').prop('checked', false);"}%>
          </div>
<table align="center" class="table table-hover" style="width:100%">
    <tbody>
     <%@privilege_tags.each do |p_t|%>
     <tr>
          <td><%= check_box_tag "privilege[]",p_t.id,false,class: "check_box"%></td>
          <td><%=p_t.name_tag%></td>
     </tr>
     <%end%>
     </tbody>
</table>
<%end%>

</div>
