$("ul.errors").html("")
<% if @collection.errors.any? %>
		<% @collection.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
  $("#list").html("<%= j render 'collections_list' %>");
  $("#modal").modal('hide');
  $('#flash').html("<%= j render 'layouts/flash_messages'%>")
<% end %>