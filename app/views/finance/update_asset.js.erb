$("ul.errors").html("")
<% if @asset.errors.any? %>
		<% @asset.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
  $("#modal").modal("hide")
  $("#assets").html("<%= j render 'asset_details'%>") 
  $('#flash').html("<%= j render 'layouts/flash_messages'%>")
<% end %>