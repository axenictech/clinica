<%if @teachers.present?%>
<%= form_for :subject,url:{action:'assign_time'},method: :post,html:{id:"create_time_form"},remote:true do |f| %>
     <%=hidden_field_tag :time_table_id%> 
   <%=hidden_field_tag :timing_id%> 
   <%=hidden_field_tag :weekday_id%> 
   <%=hidden_field_tag :subject_id%>
   <%=hidden_field_tag :batch_id%>
 <% @teachers.each do |e| unless e.employee.nil?
 	 %>
      <div class="btn btn-primary" ><%= e.employee.first_name %></div>
         <%=radio_button_tag "teacher",e.employee.id,:checked=>"unchecked" %>
      <% end %>
      <%end%>
     <%end%>
<%else%>
<h4>Yet teachers are not assigned for this subject,Assign from Work Allotment</h4>
<%end%>

