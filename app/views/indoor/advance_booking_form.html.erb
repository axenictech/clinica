            <div class="form-actions">
              <div class="row">
                <div class="col-sm-3"></div>
                  <div class="col-sm-15" >                
                    <%= c.submit 'Save', class: "btn btn-group btn-primary btn-lg"%>
                  </div>
                <div class="col-sm-5"></div>
              </div> 
            </div>
          </fieldset>
        </form>
        </div>
        </div>
        </div>
        <%end%>