<div id="content-header">
  <h1>Student</h1>
  <h3>Advanced search result</h3>
  <div id="app-back-button">
   <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">
<div id="inner-tab-menu">
  <ul>
    <li style="width:150px"><%= link_to "Search Again", 'advanced_search'%></li>
    <% unless @students.empty? %>
    <%students=[]%>
    <% @students.each do |s|%>
        <% students<< s%>
    <%end%>
    <li style="width:150px"><%= link_to "View Pdf Report",{ :action =>'advanced_search_result',format:"pdf", :students=> students, :search=> @search},method: :post%></li>
    <%end%>
  </ul>
</div>
<br/><br/>
<% if @students.nil? or @students.empty? %>
  <div align="center"><h4>No students found</h4></div>
<% else %>
<div class="searched_for themed_text">
        You searched for <%= @search %>
</div>
  <div class="students-table">
    <table id="listing" align="center" width="80%" cellpadding="1" cellspacing="1" class="table-bordered">
      <tr class="tr-head">
        <td class="col-1">
          Sl no.
        </td>
        <td class="col-3">
          Admission No
        </td>
        <td class="col-3">
         Student Name
        </td>
        <td class="col-3">
        </td></tr>
         <tr class="tr-blank"></tr>
      <% @students.each_with_index do |student,i| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-1">
            <%= i+1 %>
          </td>
          <td class="col-3">
            <%= student.admission_no %>
          </td>
          <td class="col-3">
          <%=  student.first_name + " " + student.last_name %>
          </td>
          <td class="col-3">
            <%= link_to 'View Profile' ,students_profile_path(student)%>
          </td>

        </tr>
      <% end %>
    </table>
  </div>
<% end %>
</div>