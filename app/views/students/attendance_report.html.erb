<div id="content-header">
  <h1>Students</h1>
  <h3>Attendance Report</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">
<%= form_for :report, :url=>{:action=>'genrate_report'},method: :get,remote: :true do |f|%>
  <%= f.hidden_field :student_id,value:@student.id%>
 <div class="label-field-pair">
  <%= f.label :select_subject %>
      <div class="text-input-bg">
      <%= f.select :subject_id, @subjects.collect {|s| [s.name,s.id]},{prompt:true}%>
      </div></div>

 <div class="label-field-pair">
       <%= f.label :select_start_date %>
      <div class="text-input-bg">
      <%= f.date_field :start_date,:style =>"height: 30px" %>
      </div></div>

 <div class="label-field-pair">
       <%= f.label :select_end_date %>
      <div class="text-input-bg">
      <%= f.date_field :end_date,:style =>"height: 30px"%>
      </div></div><br/>
<div align="center"><%= f.submit 'View', class: 'btn btn-default' %></div>
<% end %><br/><br/>
<div id="attendance_report"></div>
</div>
