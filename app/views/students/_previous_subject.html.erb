
<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3>New subject</h3>
    </div>

    <div class="modal-body">
     <ul class="errors"></ul>
      <%= form_for @previous_subject, url:{action:'previous_subject_create'}, method: :post,remote:true do |f| %>

      <table class="table" style="width:500px" >
	
	<%=f.hidden_field :student_id,value: @student.id %>
	
	
	<tr>
	  <td><%= f.label :subject %></td>
	  <td><%= f.text_field :subject%></td>
	</tr>
	    
	<tr>
	  <td><%= f.label :mark%></td>
	  <td><%= f.text_field :mark%></td>
	</tr>
	
	<tr>
	  <td colspan="2"><%= f.submit 'Submit',class: "btn btn-primary"%>
	    <%= link_to 'Cancel','#',class: "btn btn-default",data:{dismiss:"modal"}%></td>
	</tr>
      </table>
      <% end %>
    </div>	
  </div>
</div>