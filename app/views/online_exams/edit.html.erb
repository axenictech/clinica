<div id="content-header">
  <h1>Online Exam</h1>
  <h3>Edit Online Exam</h3>
  <div id="app-back-button">
      <%= link_to image_tag("buttons/back.png",:border => 0), batches_path %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">
   <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

<%= form_for @online_exam do |f|%>
<table class="table">
    
        <tr>
            <td class="col-2"><%= f.label :name , class: "control-label"%></td>
            <td><%=f.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        
        <tr>
            <td class="col-2"><%= f.label :Start_date , class: "control-label"%></td>
             <td><%=f.date_field :start_date,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
         
          <tr>
            <td class="col-2"><%= f.label :end_date , class: "control-label"%></td>
             <td><%=f.date_field :end_date,:style =>"width: 250px", class: "form-control"%></td>
        </tr>

         <tr>
            <td class="col-2"><%= f.label :maximum_time , class: "control-label"%></td>
             <td><%=f.text_field :maximum_time,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        <tr>
                <td class="col-2"><%= f.label :Pass_Percentage , class: "control-label"%></td>
             <td><%=f.text_field :percentage,:style =>"width: 250px", class: "form-control"%></td>
        </tr>

         <tr>

                <td class="col-2"><%= f.label :Option_per_Question , class: "control-label"%></td>
                 <td class="col-2"><%=f.select :option_per_question, [ "2", "3", "4", "5"],:style =>"
             width: 250px", class: "form-control" %></td>

        </tr>

         <tr>
             <td colspan="2">select:
                <%= link_to "All",online_exams_assign_all_path,remote:true %>&nbsp;&nbsp;&nbsp;
                  <%= link_to "None",online_exams_remove_all_path,remote:true %>
            <div id="batch_view"><%= render 'all_batch' %></div>
        </td>
        </tr>


        <tr>
        <td colspan="2"><%= f.submit 'update', class: "btn btn-primary"%>
     
        </tr>

    </table>
          <% end %>
