<div class="col-xs-12">
  <div class="page-header page-header-with-buttons">
    <h1 class="pull-left">
      <i class="icon-gears"></i>
              <span><%= t('Item Master')%></span>
              <small><%= t('new')%></small>
    </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
        <!-- <li>
          <a href="">
            <i class="icon-backward"></i>
          </a>
        </li> -->
          <li>
            <a href="home/dashboard">
              <i class="icon-dashboard"></i>
              <%= t('dashboard')%></li>
            </a>
          
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><i class="icon-gears"></i>
          <%= t('Item Master')%></li>
        </ul>
      </div>
</div>

<div id="flash"><%= render 'layouts/flash_messages'%></div>

<div class="col-sm-12">
  <div class="box bordered-box blue-border">
    <div class="box-header blue-background">
      <div class="title">
        <i class="icon-book"></i>
                        Item Master
      </div>
      <div class="actions">
                        
                        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
      </div>
    </div>

    <div class="box-content box-double-padding">
     <%= form_for @item_master,url:{action: 'create_item_master'}  do |c| %>
        <fieldset>
        <% if @item_master.errors.any?%>
        <div class="alert alert-danger">
        <h4>Errors prohibited to being saved:</h4>
        <ul><% @item_master.errors.full_messages.each do |msg|%>
          <li style="width:800px"><%= msg %></li>
          <%end%></ul>
          </div>  
        <%end%>
        <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Item Name:</label>
                <div class="col-sm-4"><%= c.text_field :item_name,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Item Name",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div> 
                  <div class="col-sm-3">
                  <%= c.check_box :active %>O.T.Items   </div> 
                </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Print Name:</label>
                <div class="col-sm-6"><%= c.text_field :print_name,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Print name",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
          </div>
          <br>
          <div class="row">
            <div class="form-group">
              <label class="col-sm-2 control-label">Company:</label>
                <div class="col-sm-6"><%= c.text_field :company,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Company",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
          </div>
          

       <br>
         
            <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Pack:</label>
                  <div class="col-sm-2"><%= c.text_field :pack,[]
                    
                      %>  
                  </div> 

                  <label class="col-sm-2 control-label">Product Units</label>
                  <div class="col-sm-2"><%= c.text_field :product_units,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "D.O.B",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>  
                </div>
              </div>              
             <br>  
             <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Purchase Tax:</label>
                  <div class="col-sm-2"><%= c.text_field :purchase_tax,[]
                    
                      %>  
                  </div> 

                  <label class="col-sm-2 control-label">Sales Tax</label>
                  <div class="col-sm-2"><%= c.select :sales_tax,[]%>  
                  </div>  
                </div>
              </div>              
             <br>  

              <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Minimum Qty:</label>
                  <div class="col-sm-2"><%= c.text_field :minimum,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Minimum Qty",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div> 

                  <label class="col-sm-2 control-label">Maximum Qty</label>
                  <div class="col-sm-2"><%= c.text_field :maximum,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Maximum Qty",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>  
                </div>
              </div>              
             <br>
             <div class="row">
              <div class="form-group">
                <label class="col-sm-2 control-label">Re-order Qty:</label>
                  <div class="col-sm-2"><%= c.text_field :reorder,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div> 

                  <label class="col-sm-2 control-label">Drug From</label>
                  <div class="col-sm-2"><%= c.text_field :drug_form,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "Drug Form",
                      required: true,
                      :"data-content"=>"Special characters not allowed",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>  
                </div>
              </div>              
             <br>
             <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Uses:</label>
                <div class="col-sm-6"><%= c.select :uses,[]
                    
                      %>  
                  </div>     
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Composition:</label>
                <div class="col-sm-6"><%= c.select :composition,[]%>  
                  </div>     
                </div>
            </div> 
            <br>
            
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">OT Items Category:</label>
                <div class="col-sm-6"><%= c.text_field :ot_item,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "OT Items Category",
                      required: true,
                      :"data-content"=>"",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
            <br>
            <div class="row">
              <div class="form-group">
               <label class="col-sm-2 control-label">Info:</label>
                <div class="col-sm-6"><%= c.text_field :info,
                    onfocus:"$(this).popover('show');" ,
                     class: "form-control input-group",placeholder: "",
                      required: true,
                      :"data-content"=>"",
                      :"data-placement"=>"right",
                      :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                      %>  
                  </div>     
                </div>
            </div> 
           
            <div class="form-actions">

                  <div class="row">
                       
                        <div class="col-sm-3"></div>
                        <div class="col-sm-2" >                
                           
                                <%= c.submit 'Save', class: "btn btn-group btn-primary btn-lg"%>
                                
                        </div>
                         <div class="col-sm-5"></div>
                    </div> 
                </div>


          </fieldset>
        <%end%>
        </div>
        </div>
        </div>
     
