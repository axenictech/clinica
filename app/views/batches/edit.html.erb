<div id="content-header">
  <h1>Courses</h1>
  <h3>Edit Batch</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
   <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">

  <div class="box">
    <div class="bread_crumb">
      <%= link_to 'Courses', courses_path %> &raquo;
      <%= link_to @batch.course.course_name, course_path(@batch.course) %> &raquo;
      <%= link_to "Batch #{@batch.name}",batches_display_path(@batch)%> &raquo;
      Edit
    </div>


<%= form_for @batch do |b|%>
<% if @batch.errors.any?%>
    <div class="alert alert-danger">
    <h4>Errors prohibited to being saved:</h4>
    <ul><% @batch.errors.full_messages.each do |msg|%>
      <li style="width:800px"><%= msg %></li>
      <%end%></ul>
      </div>  
      <%end%>
<table class="table">
<tbody>
<tr><td><%=b.label :name%></td>
<td><%=b.text_field :name,class: "form-control",:style =>"width: 250px"%></td>
</tr>
<tr>
<td><%=b.label :start_date%></td>
<td><%=b.date_field :start_date ,:id=>'datetimepicker2',class: "form-control",:style =>"width: 250px"%></td>
</tr>
<tr>
<td><%=b.label :end_date%></td>
<td><%=b.date_field :end_date ,:id=>'datetimepicker2',class: "form-control",:style =>"width: 250px"%></td>
</tr>
<tr>
<td colspan="2" ><%=b.submit "Update",class: "btn btn-primary" %></td></tr>

<%end%>

</tbody>
</table>
</div></div>