<div id="content-header">
   <hr class="fancy-line"></hr>
  <h1>Addmission</h1>
  <h3>Employee Details Update<br />
  <small><font color="red">Fields Marked with * must be filled</font></small></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div><br/><br/>

<div id="page-yield">


<table align="center" class="table table-hover" style="width:1000px">
<%= form_for @employee ,url:{action:'update_edit_profile',format:@employee.id} do |f| %>
    
    <div align="center">
    <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
          <% end %>
      </div>
 </div>
    <tbody>
    
     <tr>     
          <td class="col-2"><%=f.label :'Date of birth' %><span class="necessary-field">*</span></td>
          <td class="col-2"><%=f.date_field :date_of_birth,:value => Time.now.strftime('%Y-%m-%d')%></td>
     </tr>

    <tr>
        <td class="col-2"><%=f.label :"Marital-Status"%></td>
        <td class="col-2"><%= select :employee, :marital_status, [["single"], ["married"],["divorced"]], {}, {:onchange=>"hide_or_show_fields(this.value)"} %></td>
    <tr>
         <td class="col-2"><%=f.label :"Father Name"%></td>
           <td class="col-2"><%=f.text_field :father_name%></td>
     </tr>

      <tr>
         <td class="col-2"><%=f.label :"mother name"%></td>
           <td class="col-2"><%=f.text_field :mother_name%></td>
     </tr>

       <tr>
         <td class="col-2"><%=f.label :Blood_Group%></td>
          <td class="col-2"><%=f.select :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"] %></td>
     </tr>
     
      <tr>
         <td class="col-2"><%=f.label :Nationality%></td>
          <td class="col-2"><%=f.select :country_id,Country.all.collect{|c| [c.name,c.id]}%></td>
     </tr>

         
   
     <tr><td colspan="4"><%=f.submit "Update",class: "btn btn-success" %></td></tr>

<%end%>
</tbody>
</table>
  </div>
