<div id="content-header">
  <h1>Events</h1>
  <h3>Step 2 - Confirmation</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png", :border => 0), :back %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">
<div class="box">
<%= form_for :events,url:{action:'update'},method: :patch do |f| %>
<table align="center" class="table" style="width:800px">
<tbody>
<%= hidden_field_tag :event_id,@event.id%>
	<tr class="tr-head">
			<td class="col-2">Title</td>
			<td class="col-2"><%=@event.title%></td>
	</tr>

	<tr class="tr-head">
			<td class="col-2"> Description</td>
			<td class="col-2"><%=@event.description%></td>
	</tr>
	<tr class="tr-head">
			<td class="col-2"> Start Date</td>
			<td class="col-2"><%=@event.start_date.to_date%></td>
	</tr>

	<tr class="tr-head">
			<td class="col-2"> End Date</td>
			<td class="col-2"><%=@event.end_date.to_date%></td>
	</tr>
	<%unless @event.is_common? %>
	<tr class="tr-head">
		<td class="col-2"><%= link_to 'Select Batch',event_path,remote: true%></td>	
		<td id="batch_details"></td>
	</tr>
	
	<tr class="tr-head">
		<td class="col-2"><%= link_to 'Select Department',events_showdep_path,remote: true%></td>
		<td id ="department_details"></td>
	</tr>
	 <%end%>
	<tr class="tr-head">
		<td colspan="2"><%=f.submit 'Confirm',class: "btn btn-primary"%>
 		<%= link_to 'Cancel',calender_index_path,class: "btn btn-primary"%></td>
	</tr>

</tbody>
</table>
<%end%>
</div></div>