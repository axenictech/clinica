<div id="content-header">
  <h1>Events</h1>
  <h3>Step 1 - Create</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div class="box">
<%= form_for :event ,url:{action:'create'} do |f| %>

<div><%=f.label :start_date%></div>
<div><%=f.date_field :start_date ,value: @start_date,readonly:true,:id=>'datetimepicker2',class: "form-control",:style =>"width: 250px"%></div>

<div><%=f.label :end_date%></div>
<div><%=f.date_field :end_date ,value: @start_date,:id=>'datetimepicker2',class: "form-control",:style =>"width: 250px"%></div>

<div>
<p>
<%= f.label :title %><br>
<%= f.text_field :title %>
</p>
</div>
<div>
<p> 
<%=f.label :Description %><br>
<%=f.text_field :description %>
</p>
</div>
   <p> <%= f.check_box :is_holiday, {:checked=>false}%> 
        <%= label_tag(:is_holiday, "Holiday") %></p>
   <p> <%= f.check_box :is_common, {:checked=>false}%> 
        <%= label_tag(:is_common, "Event common to all") %></p>
 <p>
   <%= f.submit :'Create Event'%>
 </p>
  <% end %>
  </div>