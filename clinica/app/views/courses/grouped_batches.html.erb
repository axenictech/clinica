<div id="content-header">
  <h1>Courses</h1>
  <h3>Grouped Batches</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), courses_path %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">
  
  <div class="box">

        <div class="bread_crumb">
        <%= link_to 'Courses', courses_path %> &raquo;
        <%=link_to @course.course_name, course_path(@course) %>&raquo;
        Grouped Batches
        </div>
<%= form_for @batch_group,url:{action:'create_batch_group'} do |c| %>
	<% if @batch_group.errors.any?%>
		<div class="alert alert-danger">
		<h4>Errors prohibited to being saved:</h4>
		<ul><% @batch_group.errors.full_messages.each do |msg|%>
			<li style="width:800px"><%= msg %></li>
		<%end%></ul>
		</div>	
	<%end%>
    <table class="table" style="width:80%">
    	<%= c.hidden_field :course_id, value: @course.id%>
        <tr>
            <td><%=c.label :name %></td>
            <td><%=c.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        <tr><td colspan="2">
				Select: <%= link_to "All",courses_assign_all_path(@course),remote:true%>
				  <%= link_to "None",courses_remove_all_path(@course),remote:true %>
			<p id="batch_view"><%= render 'all_batch' %></p>
        </td></tr>
        <tr>
        <td colspan="2"><%=c.submit 'Submit', class: "btn btn-primary"%></td>
        </tr>
    </table>
<div id="batch_group_details"><%= render 'batch_group'%></div>
<% end %>
</div></div>