<div id="content-header">
  <h1><%= t('General Setting')%></h1>
  <h3><%= t('Home')%><br/>
 <small><font color="red"><%= t('Fields Marked with * must be filled</font></small')%></font></h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">
<table align="center" class="table table-hover" style="width:1000px">
<%= form_for @general_setting,method: :patch do |f| %>

<div align="center">
<% if @general_setting.errors.any?%>
      <div class="alert alert-danger" style="width:500px" >
      <h4><%= t('Errors prohibited to being update:')%></h4>
        <ul>
          <% @general_setting.errors.full_messages.each do |msg| %>
          <li style="width:500px" align="left"><%= msg%></li>
          <% end %>
        </ul> 
      </div>
    <% end %>
</div>

  <tbody>
    <tr>
      <td class="col-2"><%= t('School/College Name')%><span class="necessary-field">*</span></td> 
      <td><%= f.text_field :school_or_college_name,:style =>"width: 310px" , class: "form-control" %></td></tr>
      

  <tr>

    <td class="col-2"><%= t('School/College Address')%><span class="necessary-field">*</span></td> 
    <td><%= f.text_field :school_or_college_address,:style =>"width: 310px",class: "form-control"%></td>
    
  </tr>

  <tr>
   
    <td class="col-2"><%= t('School/College Phone No.')%><span class="necessary-field">*</span></td> 
    <td><%= f.text_field :school_or_college_phone_no,:style =>"width: 310px", class: "form-control"%></td>
    
  </tr>

  <tr>
    <td class="col-2"><%= t('Student Attendance Type')%></td> 
    <td class="col-2"><%= f.select :student_attendance_type, ['Subjectwise','Daily'], :selected => 'SubjectWise', :style =>"width: 310px" %></td>
  </tr>

 <tr>
    <td class="col-2"><%= t('Finance_start_year_date') %></td> 
    <td class="col-2"><%= f.date_select :finance_start_year_date, :start_year=>1999 %></td>
  </tr>
      
  <tr>
    <td class="col-2"><%= t('Finance_end_year_date') %></td> 
    <td class="col-2"><%= f.date_select :finance_end_year_date, :end_year=>2019%></td>
  </tr>
 
  <tr>
    <td class="col-2"><%= t('Language') %></td> 
    <td class="col-2"><%= f.select :language,Language.all.collect{|l| [l.name,l.id]}, prompt:true,  :style => "width:310px" %></td>
  </tr>

  <tr>

    <td class="col-2"><%= t('Time_Zone') %></td> 
    <td class="col-2"><%= f.select :time_zone, ['Greeneich Mean Time(GMT-GMT+00:00)','Eastern European Time(EET) - GMT+02:00','Pakistan Lahore Time(PLT) - GMT+05:00','Indian Standard Time(IST) - GMT+05:30','Australia Eastern Time(AET) - GMT+10:00'], :selected => 'Indian Standard Time(IST) - GMT+05:30',  :style => "width:310px", class: "dropdown-toggle" %></td>
  </tr>

  <tr>
    <td class="col-2"><%= t('Country') %></td> 
    <td class="col-2"><%= f.select :country, Country.all.collect{|c| [c.name,c.id]},:style => "width:310px",prompt:true%></td>
  </tr> 
  <tr>
    <td class="col-2"><%= t('Upload Logo')%></td> 
    <td class="col-2"><%= f.file_field :image%></td>
  </tr>
  <tr>
    <td class="col-2"><%= t('Include Grading Systems') %></td> 
    <td class="col-2">
    Select: &nbsp;&nbsp;
    <%= link_to "All",general_settings_all_path,remote:true%>&nbsp;&nbsp;
        <%= link_to  "None",general_settings_none_path,remote:true%>
        <p id="grading_system"><%= render 'grading_type'%></p>
      </td>
  </tr>
    <tr><td></td>
      <td class="col-2"> <%= f.check_box :addmission_number_auto_increament, {:checked=>true} %>  <%= t('Enable Auto Increment Student Admission No.')%>
      </td>
    </tr>
    <tr><td></td>
    <td class="col-2"> <%= f.check_box :employee_number_auto_increament, {:checked=>true} %> 
        <%= t('Enable Auto Increment Employee No.')%>
    </td>
    </tr>
    <tr><td></td>
        <td class="col-2"> <%= f.check_box :enable_news_comment_moderation, {:checked=>false} %> 
        <%=  t('Enable News Comment Moderation') %>
        </td> 
    </tr>
    <tr><td colspan="2">
    <%= f.submit 'Update',  class: "btn btn-success"%> 
    
    </td>
    </tr>
    
</table>

 <% end %>
</div>