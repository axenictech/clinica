<div id="content-header">
  <h1>Fees Collection</h1>
  <h3>Create Fee Collection</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li style="width:150px"><%= link_to 'Fees Collection','fee_collection'%></li>
  </ul>
</div>

<div id="page-yield">
<%= form_for @collection,url:{action: 'create_fee_collection'} do |f| %>
	<% if @collection.errors.any?%>
      <div class="alert alert-danger">
        <ul>
          <h3>Errors Prohibited: </h3>
          <% @collection.errors.full_messages.each do |msg| %>
          	<li style="width:500px"><%= msg%></li>
          <% end %>
        </ul> 
      </div>
  	<% end %>
  	 <div class="row">
          <div class="col-md-3"><%= f.label :finance_fee_category %></div>
          <div class="col-md-3"><%= f.select :finance_fee_category_id,@categories.collect{|c| [c.name,c.id]},{prompt:true},{onclick:"var a={id:$('#finance_fee_collection_finance_fee_category_id').val()};$.get('category_batch',a,function(response){});",:style =>"width: 250px",class: "form-control"}%></div>
      </div><br/>
       <div class="row">
        <div class="col-md-3"><%= label_tag :select_batch %></div>
        <div class="col-md-3"> Select:&nbsp;&nbsp;<%= link_to "All",finance_select_all_path,{onclick:"$('.check_box').prop('checked',true);",remote:true}%>&nbsp;&nbsp;<%= link_to "None",finance_select_none_path,{onclick:"$('.check_box').prop('checked',false);",remote:true}%>
        <div id="fee_category"><%= render 'category_batches_list'%></div>
        </div>
      </div><br/>
      <div class="row">
        <div class="col-md-3"><%= f.label :fee_collection_name %></div>
        <div class="col-md-3"><%= f.text_field :name,:style =>"width: 250px",class: "form-control"%></div>
      </div><br/>
      <div class="row">
          <div class="col-md-3"><%= f.label :start_date %></div>
          <div class="col-md-3"><%= f.date_field :start_date,:style =>"width: 250px",class: "form-control"%></div>
      </div><br/>
       <div class="row">
          <div class="col-md-3"><%= f.label :end_date %></div>
          <div class="col-md-3"><%= f.date_field :end_date,:style =>"width: 250px",class: "form-control"%></div>
      </div><br/>
       <div class="row">
          <div class="col-md-3"><%= f.label :due_date %></div>
          <div class="col-md-3"><%= f.date_field :due_date,:style =>"width: 250px",class: "form-control"%></div>
      </div><br/>
      <div class="row">
      <div class="col-md-3"></div>
        <div class="col-md-3"><%= f.submit 'Submit', class: "btn btn-primary"%></div>
      </div>
<%end%>
</div>
