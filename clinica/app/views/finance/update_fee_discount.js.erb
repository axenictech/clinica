$("ul.errors").html("")
<% if @discount.errors.any? %>
		<% @discount.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
  $("#modal").modal('hide');
  $("#list").html("<%= j render 'discounts_list' %>");
  $('#flash').html("<%= j render 'layouts/flash_messages'%>")
<% end %>