<div id="content-header">
  <h1>Incomes</h1>
  <h3>Edit Income</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Income','view_income'%> </li>
  </ul>
</div>

<div id="page-yield">

<%= form_for @transaction, url:{action: 'update_income'},method: :patch do |f| %>
	<% if @transaction.errors.any?%>
      <div class="alert alert-danger">
        <ul>
          <h3>Errors Prohibited: </h3>
          <% @transaction.errors.full_messages.each do |msg| %>
          	<li style="width:500px"><%= msg%></li>
          <% end %>
        </ul> 
      </div>
  	<% end %>
<table class="table" style="width:500px" align="center">
<tbody>
		<tr>
			<td class="col-2"><%= f.label :title%></td>
			<td class="col-2"><%= f.text_field :title,:style =>"width: 200px", class: "form-control"%></td>
		</tr>
		<tr>
			<td class="col-2"><%= f.label :description%></td>
			<td class="col-2"><%= f.text_field :description,:style =>"width: 200px", class: "form-control"%></td>
		</tr>
		<tr>
			<td class="col-2"><%= f.label :amount%></td>
			<td class="col-2"><%= f.text_field :amount,:style =>"width: 200px", class: "form-control"%></td>
		</tr>
    <tr>     
      <td class="col-2"><%=f.label :transaction_date %></td>
      <td class="col-2"><%=f.date_field :transaction_date,:value => Time.now.strftime('%Y-%m-%d'),:style =>"width: 200px", class: "form-control"%></td>
    </tr>
    <tr>     
      <td class="col-2"><%=f.label :category %></td>
      <td class="col-2"><%= f.select :finance_transaction_category_id, @categories.collect {|b| [b.name,b.id]},{prompt:true},:style =>"width: 200px", class: "form-control"%></td>
    </tr>
	<tr>
		<td colspan="2"><%= f.submit 'Update',class: "btn btn-success"%></td>
	</tr>
</tbody>
</table>
<%end%>
</div>
