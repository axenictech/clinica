<div id="content-header">
  <h1>Master Category</h1>
  <h3>Finance Management</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0),:back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">

  <div class="box">
    <div class="row">
    <div class="col-md-3">
      <div class="link-box">
        <div class="link-heading"><%= link_to 'Create Category',finance_new_master_category_path,remote:true%></div>
        <div class="link-descr">Create Master Category</div>
      </div></div>
    <div class="col-md-3">  
      <div class="link-box">
        <div class="link-heading"><%= link_to 'Create Particular',finance_new_fees_particular_path %></div>
        <div class="link-descr">Create Particular Category</div>
      </div></div>
    <div class="col-md-3">
      <div class="link-box">
        <div class="link-heading"><%= link_to 'Create Discount','new_fee_discount'%></div>
        <div class="link-descr">Create Fees Discount</div>
      </div></div>
    </div>
  <%= form_for :batch, :url=>{:action=>'fees_list'},html:{id: 'form_batch'},remote:true,method: :get do |f| %>
     <div class="label-field-pair">
      <%= f.label :select_batch %>
          <div class="text-input-bg">
          <%= f.select :id,Batch.all.collect {|b| [b.course.course_name+" "+b.course.section_name+" - "+b.name,b.id]},{prompt:true},{onchange:"$('#form_batch').submit();"}%>
          </div></div>
      <% end %>
  </div><br/><br/>
<div id="list"></div>
<div id="myModal" class="modal fade"></div>
</div>