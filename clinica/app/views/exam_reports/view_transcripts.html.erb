<div id="content-header">
  <h1>Exam Reports</h1>
  <h3>View Transcripts</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), :back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">
  <div class="box">

  <div class="bread_crumb">
    <%= link_to 'Exams', '/exams' %> &raquo;
    <%= link_to 'Report Center', '/exam_reports/report_center' %> &raquo;
    View Transcripts
  </div><br/><br/>

<%= form_for :transcript, :url=>{:action=>'generate_view_transcripts'},method: :get do |f|%>
  
 <div class="label-field-pair">
  <%= f.label :select_batch %>
      <div class="text-input-bg">
      <%= f.select :batch_id, Batch.all.collect {|b| [b.course.course_name+" "+b.course.section_name+" - "+b.name,b.id]},{prompt:true}%>
      </div></div>
      <%= f.submit 'View', class: 'btn btn-default' %>
  <% end %>
  </div>
</div> 