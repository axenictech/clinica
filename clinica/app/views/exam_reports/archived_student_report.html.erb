<div id="content-header">
  <h1>Exam Reports</h1>
  <h3>Archived Student Report</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0),:back  %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">

  
  <div class="box">

  <div class="bread_crumb">
    <%= link_to 'Exams', '/exams' %> &raquo;
    <%= link_to 'Report Center', '/exam_reports/report_center' %> &raquo;
    Archived Student Report
  </div>
   <% unless flash[:notice_arch].nil? %>
    <div class="alert alert-danger" align="center" style="width:100%"> <%= flash[:notice_arch] %> </div>
    <%end %>
<%= form_for :course_select, :url=>{:action=>'select_course'},html:{id: 'form_course'},remote:true,method: :get do |f| %>
  
 <div class="label-field-pair">
  <%= f.label :select_course %>
      <div class="text-input-bg">
      <%= f.select :id, @courses.collect {|c| [c.course_name,c.id]},{prompt:true},{onchange:"$('#form_course').submit();"}%>
      </div></div>
  <% end %>
      <div id="archived_report"></div>
  </div>
</div>