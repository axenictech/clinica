
 <div class="page-header">
  <h1 class="pull-left">
    <i class="icon-tags"></i>
      <!-- <span>settings</span> -->
      <span>Student Category</span>
  </h1>
  <div class="pull-right">
    <ul class="breadcrumb">
      <li>
        <a href="setting">
        <i class="icon-gears"></i>
        Settings
        </a>
      </li>
        
          
      <li class="separator">
        <i class="icon-angle-right"></i>
      </li>

      <li class="active"><i class="icon-tags"></i>
          Categories
      </li>
    </ul>
  </div>
</div>


<%= form_for :category, url:  categories_path do |f| %>
     
<div class="col-sm-12">
  <div class="box bordered-box blue-border">
    <div class="box-header blue-background">
      <div class="title">
        <i class="icon-tags"></i>
        Categories
      </div>
      <div class="actions">
        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
        </a>
      </div>
    </div>
<% if @category.errors.any? %>
  <div class="alert alert-danger">
    <h3>Error prohibited to being saved:</h3>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li style="width:300px"><%= msg %></li>
          <% end %>
        </ul>
    </div>
<%else%>
  
<div class="box-content box-double-padding">
  <form class="form" style="margin-bottom: 0;">
    <fieldset>
      <div class="col-sm-4">
            <div class="box">
              <div class="lead">
              <i class="icon-tags text-contrast"></i>
                                Categories
              </div>
            <small class="text-muted">Every student in the department belong to a category, it is an important part of the institution.</small>
            </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <div class="form-group">
              <label>Category name</label>
                <%= f.text_field :name,
                 # onfocus:"$(this).popover('show');" ,
                 oninput: "$(this).alert('hi')",
                # :style=>"width:250px",
                class: "form-control input-group",placeholder: "name",required: true
                # :"data-content"=>"Special characters not allowed"
                # :"data-placement"=>"right",
                # :"data-toggle"=>"popover",:"data-trigger"=>"focus"
                %>       
              <p class="help-block">
              <small class="text-muted">eg. OBC,SC,NT1 </small>
              </p>
        </div>
      </div>
    </fieldset>

    <div class="form-actions">
      <div class="row">
      <div class="col-sm-7 col-sm-offset-5">                
       <i class="icon-ok-circle "></i>
            <%= f.submit 'Create', class: "btn btn-group btn-primary btn-lg"%>
            
          </div>
        
      </div>
    </div>

  </form>
  </div>
  <%end%>
<%end%>  


<div class="group-header">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="text-center">
        <h2>Detailed View of student category </h2>
        <small class="text-muted">List of all categories that are currently been used in the institution for students</small>
      </div>
    </div>
  </div>
</div>

<div class="col-sm-12 ">
  <div class="box bordered-box green-border" style="margin-bottom:0;">
    <div class="box-header green-background">
      <div class="title"><%= t('courses details')%></div>
        <div class="actions">  
          <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
          </a>
        </div>
    </div>

  <div class="box-content box-no-padding">
  <div class="responsive-table">
    <div class="scrollable-area">
      <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline" role="grid">
      <div class="row datatables-top">
      <div class="col-sm-4">
        <div id="DataTables_Table_0_length" class="dataTables_length">
        </div>
      </div>
      </div>
      <table class="data-table table table-bordered table-striped dataTable" style="margin-bottom:0;" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
      <%unless @categorys.nil?%>
              <% if @categorys.empty? %>
              <h4 align="center">No Record Found </h4>
              <% else %>

        <thead>
          <tr role="row">
          <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending" aria-label="
              Name
            : activate to sort column descending" style="width: 297px;">
              Category Name
            </th>
            <th class="sorting" role="columnheader" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label=": activate to sort column ascending" style="width: 125px;">Actions</th>

            </tr>
            
        </thead>
        
      <tbody role="alert" aria-live="polite" aria-relevant="all">
    <% @categorys.each do |cat| %> 
      <tr class="<%= cycle('odd', 'even')%>">
        <td class=" sorting_1"><%= cat.name%></td>
        <td class=" ">
          <div class="text-right">
          <i class="icon-pencil"></i>
            <%= link_to 'Edit', edit_category_path(cat),remote:true,class: "btn btn-warning btn-xs"%>
            
            <i class="icon-remove"></i>
            <%= link_to 'Delete', category_path(cat),
                    method: :delete, data: { confirm: "Are you sure to delete #{cat.name} category"} %>          </div>              
        </td>
      </tr>
    <%end%>
  </tbody>
<%end%>
<%end%>
</table>

<div class="row datatables-bottom">
  <div class="col-sm-6">  
  </div>
  <div class="col-sm-6 text-right">
  <div class="dataTables_paginate paging_bootstrap">
  <ul class="pagination pagination-sm"><li class="prev disabled"><a href="#">← Previous</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li class="next"><a href="#">Next → </a></li></ul></div></div></div></div>
    </div>
  </div>
</div>




                           